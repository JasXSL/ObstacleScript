	float maxTemp = 1.0;
	
	if( HAS_TEMPS && !hasWeakAffix(GhostGet$affixes(), ToolSetConst$affix$noEvidenceUntilSalted) )
		maxTemp = (float)(TEMP_MAX-TEMP_INDOOR)/(TEMP_MAX_NO_EVIDENCE-TEMP_INDOOR);
		
	//qd("Setting " + val + "on" + roomIndex + "max" + maxTemp);
	if( val < 0 )
		val = 0;
	if( val > maxTemp )
		val = maxTemp;
	roomTemps = llListReplaceList(roomTemps, (list)val, roomIndex, roomIndex);

}




// Overrides the main event handler to save memory when booting
handleStateEntry(){
	
	list rindex;
	list tmp = ROOMS;
	idbDropInline(idbTable$NODES_ROOM_LABELS);
	idbDropInline(idbTable$NODES_ROOM_NAMES);
	int i;
	for( ; i < count(tmp); i += 3 ){
		
		C_ROOMS += (list)i + l2i(tmp, i+2);
		idbInsert(idbTable$NODES_ROOM_LABELS, l2s(tmp, i));
		idbInsert(idbTable$NODES_ROOM_NAMES, l2s(tmp, i+1));
		rindex += (list)l2s(tmp, i);
		
	}	
	tmp = [];
	
	rezPos = llGetPos();
	
	// Iterate the spawn table and cache room markers pos, rot, size
	idbForeach(idbTable$SPAWNS, idx, data)
		
		list spawn = llJson2List(data);
		if( l2s(spawn, SpawnerConst$E_GROUP) == "rooms" ){
		
            string label = j(l2s(spawn, SpawnerConst$E_DESC), 1); // Room label is stored as second param of desc
            
            integer pos = llListFindList(rindex, (list)label);
            if( pos == -1 )
                llOwnerSay(label + "room index not found");
            ROOM_MARKERS += (list)
                pos +	// index of stride slice
                (vector)l2s(spawn, SpawnerConst$E_POS) +
                (rotation)l2s(spawn, SpawnerConst$E_ROT) +
                (vector)j(l2s(spawn, SpawnerConst$E_DESC), 0) // Size
            ;
	
		}
		
	end
	
	portals = [];
	list found;
	
	// Sanity check our portals
	links_each( nr, name,
		
		if( name == "PORTAL" ){
			
			list spl = split(prDesc(llGetLinkKey(nr)), ":");
			integer i;
			for(; i < count(spl); ++i ){
				
				string n = l2s(spl, i);
				if( ~llListFindList(found, (list)n ) ){}
				else if( llListFindList(rindex, (list)n) == -1 ){
					llOwnerSay("GhostNodes: Add '" + n + "' to ROOMS");
					return;
				}
				else{
					
					integer pos = llListFindList(rindex, (list)n);
					if( ~pos ){
						rindex = llDeleteSubList(rindex, pos, pos);
						found += n;
					}
					
				}
			}
			
		}
		
	)
	
	if( count(rindex) )
		llOwnerSay("No room markers:" + llList2CSV(rindex));
	
	// Next make a 2-stride list of each portal with the first value containing the two room indexes, and the second being the UUID of the portal
	links_each( nr, name,
		
		if( name == "PORTAL" ){
			list spl = llParseString2List(
			
				l2s(llGetLinkPrimitiveParams(nr, (list)PRIM_DESC), 0), 
				(list)":", 
				[]
			);
			portals +=  (list)(
				getRoomIndexByLabel(l2s(spl, 0)) | 
				(getRoomIndexByLabel(l2s(spl, 1)) << 8)
			) + nr;
			
		}
		
	)
	
	//llOwnerSay("Cached" + count(ROOM_MARKERS)/4 + "Markers");

    
	resetTempData();
	setInterval("TICK", 10);
	setInterval("POS", 1);


}



