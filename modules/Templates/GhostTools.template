onLevelInteractStarted( obstacle, tPos )
    
    integer pos = llListFindList(spawnedTools, (list)obstacle);
    if( pos == -1 )
        return;
        
    key holder = l2k(spawnedTools, pos+2);
    if( holder )
        return;
        
    key sender = llGetOwnerKey(SENDER_KEY);
    if( numToolsHeldBy(sender) >= 3 )
        return;
    
    int type = l2i(spawnedTools, pos+1);
    
    spawnedTools = llListReplaceList(spawnedTools, (list)sender, pos+2, pos+2);
    GhostTool$pickedUp( obstacle );
    ToolSet$addTool( 
        sender, 
        type, 
        llList2List(spawnedTools, pos+3, pos+3), 
        obstacle
    );
    
    if( type == ToolsetConst$types$ghost$videoCamera )
        raiseEvent(0, "CAM" + obstacle + FALSE);
    
    updateSensors();

end

