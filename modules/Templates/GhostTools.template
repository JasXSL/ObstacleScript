            spawns += (list)ToolsetConst$types$ghost$thermometer + (1+(nrPlayers>2));
        
        
        
        spawnGear(spawns);
                        
        Rezzer$cb( LINK_THIS, "TOOLS" );
        
        if( hasWeakAffix(ToolSetConst$affix$fewerHidingSpots) )
            Spawner$load( LINK_THIS, "CJ", TRUE, "" );
        
        forPlayer(i, targ)
            ToolSet$reset( targ );
        end
        
    }
    else if( argStr(0) == "ROUND_START" ){
        
        toggleDoors(TRUE);
        if( llFrand(1.0) < 0.4 )
            Spawner$getGroups("ouija", "OUIJA");
            
    }
    else if( argStr(0) == "DIFFICULTY" ){
        
        DIFFICULTY = argInt(1);
                    
    }
    
    else if( argStr(0) == "RESET_TOOLS" ){
        
        key player = argKey(1);
        
        integer i;
        for(; i < count(spawnedTools); i += STSTRIDE ){
            
            key holder = l2k(spawnedTools, i+2);
            if( holder == player )
                dropTool( player, l2k(spawnedTools, i), ZERO_VECTOR, ZERO_ROTATION );
        
        }
        
    }
    else if( argStr(0) == "END_GAME" ){
        toggleDoors(FALSE);
        setTimeout("RESET_DOOR", 5);
    }
    else if( argStr(0) == "DEBUG" ){
        
        // resetPlayerTools(llGetOwner());
        
    }
    else if( argStr(0) == "EVIDENCE" ){
        
        EVIDENCE = argInt(1);
        GHOST_TYPE = argInt(2);
        
    }
    else if( argStr(0) == "AFFIXES" )
        AFFIXES = argInt(1);
    else if( argStr(0) == "HUNT" ){
        
        BFL = BFL&~BFL_HUNTING;
        if( argInt(1) )
            BFL = BFL|BFL_HUNTING;
        
    }
    
end

