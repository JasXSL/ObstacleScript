        // Check if ghost is near a horny bat
        integer i;
        for(; i < count(spawnedTools); i += STSTRIDE ){
            
            key id = l2k(spawnedTools, i);
            integer type = l2i(spawnedTools, i+1);
            if( type == ToolsetConst$types$ghost$hornybat ){
                
