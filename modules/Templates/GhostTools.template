    if( pos == -1 ){
        qd("Trying to update data on unknown tool ID" + tooluuid);
        return;
    }
    
    
    if(
        l2i(spawnedTools, pos+1) == ToolsetConst$types$ghost$saltpile && 
        (int)data == 1
    ){
